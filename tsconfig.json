{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "jsx": "react-jsx",
    "paths": {
      "@components/*": ["components/*", "components/*/index", "components/index"],
      "@libs/*": ["libs/*"],
      "@styles/*": ["styles/*"],
      "@contexts/*": ["contexts/*"],
      "@providers": ["contexts/index"],
      "@services": ["services/index"],
      "@assets/*": ["assets/*"],
      "@controllers": ["controllers/index"],
      "@helpers/*": ["helpers/*"],
      "@pages/*": ["pages/*"],
      "@store/*": ["store/*"],
      "@utils/*": ["utils/*"],
      "@config": ["config/index"],
      "@controllers/*": ["controllers/*", "controllers/*/index", "controllers/index"],
      "@types": ["types"],
    },
    "incremental": true
  },
  "include": ["src", "declarations.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types", "src/types.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
