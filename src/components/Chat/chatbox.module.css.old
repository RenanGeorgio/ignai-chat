.conversation {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.groupChat {
  background-color: #fff;
  color: #000;
  padding: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.conversation1 {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.conversation2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  width: 100%;
}

.nomeEstabelecimento {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  font-weight: bold;
  flex-grow: 1;
}

.address {
  font-size: 14px;
  color: #c0c0c0;
}

.address1 {
  display: flex;
  margin-left: auto;
}

.address1,
.address2 {
  display: flex;
  align-items: center;
}

.tempoAtendimento {
  font-size: 14px;
  color: grey;
}

.icon {
  margin-left: auto;
}

.x {
  margin-left: 10px;
  color: white;
  text-decoration: none;
  font-size: 18px;
}

.conversation3 {
  padding: 15px;
  background-color: #f5f5f5;
  height: 100vh; 
  overflow-y: auto;
  cursor: pointer;
}

.conversation3::-webkit-scrollbar {
  width: 6px; 
}

.conversation3::-webkit-scrollbar-thumb {
  background-color: #4f4f4f; 
  border-radius: 3px; 
}

.conversation3::-webkit-scrollbar-track {
  background-color: #d4d4d4; 
}

.chat {
  background-color: #d3d3d3;
  padding: 10px;
  border-radius: 12px 12px 12px 0px;
  color: #000;
  font-size: 14px;
  max-width: 60%;
  margin-bottom: 5px;
}

.cliente {
  background-color: #000;
  padding: 10px;
  border-radius: 12px 12px 12px 0px;
  color: #fff;
  font-size: 14px;
  max-width: 60%;
  margin-left: auto;
  margin-bottom: 10px;
}

.input {
  padding: 10px;
  background-color: #fff;
  border-top: 1px solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.searchBar {
  display: flex;
  align-items: center;
  background-color: #f0f0f0;
  padding: 10px;
  border-radius: 24px;
  width: 100%;
}

.name {
  color: #000;
}
.smile1Icon,
.imageIcon,
.attachIcon,
.locationIcon {
  width: 24px;
  height: 24px;
  margin-left: 10px;
  cursor: pointer;
}

.escrevaSuaMensagem {
  flex-grow: 1;
  margin-left: 10px;
  color: #808080;
}

.escrevendo {
  font-size: 14px;
  color: grey;
}

.messageHeader {
  display: flex;
  justify-content: space-between;
  margin-bottom: 5px;
}

.senderNameBot {
  color: #000;
  font-weight: bold;
}

.senderNameCliente {
  color: #fff; 
}

.customMessage {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #e8e8e8;
  color: #000;
  padding: 10px;
  border-radius: 12px;
  margin: 10px auto;
  max-width: 30%;
  position: relative;
}

.containerCustom {
  margin-top: 20px;
  margin-bottom: 30px;
}

.customText {
  text-align: center;
}

.timeCustom {
